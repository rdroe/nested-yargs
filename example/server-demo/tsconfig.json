{
    "compilerOptions": {
	"module": "CommonJS",
	"esModuleInterop": true,
	"moduleResolution": "node",
	"noImplicitAny": true,
	"removeComments": true,
	"preserveConstEnums": true,
	"sourceMap": true,
	"outDir": "./dist",
	"declaration": true,
	"allowJs": true,
	"lib": ["dom", "es2019"],
	"rootDir": ".",
        "skipLibCheck": true,
        "paths": {"nyargs/*": ["../../*"]}
        
    },
    "watchOptions": {
	"watchDirectory": "useFsEvents"
    },
    "include": ["myapp.ts"],
    "exclude": [ "**/*.spec.ts"]
}
