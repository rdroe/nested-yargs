{
    "compilerOptions": {
	"rootDir": "./src",
	"baseUrl": "./src",
	"esModuleInterop": true,
	"moduleResolution": "node",
	"noImplicitAny": true,
	"removeComments": false,
	"preserveConstEnums": true,
	"sourceMap": true,
        "outDir": "./dist/",
	"declaration": true,
	"allowJs": true,
	"lib": ["dom", "es2019", "ES2015"],
	"noEmit": false,
        "target": "esNext",
	"moduleResolution": "nodenext",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*.ts"],
    "watchOptions": {
	"watchDirectory": "useFsEvents"
    }
}
