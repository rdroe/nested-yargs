{
    "compilerOptions": {
	"module": "CommonJS",
	"esModuleInterop": true,
	"moduleResolution": "node",
	"noImplicitAny": true,
	"removeComments": true,
	"preserveConstEnums": true,
	"sourceMap": true,
	"outDir": "./dist",
	"declaration": true,
	"allowJs": true,
	"lib": ["dom", "es2019"]
    },
    "watchOptions": {
	"watchDirectory": "useFsEvents"
    },
    "include": ["browser.ts", "index.ts","myapp.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
