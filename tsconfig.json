{
    "compilerOptions": {
	"module": "CommonJS",
	"esModuleInterop": true,
	"moduleResolution": "node",
	"noImplicitAny": true,
	"removeComments": true,
	"preserveConstEnums": true,
	"sourceMap": true,
	"outDir": "dist/",
	"declaration": true
    },
    "watchOptions": {
	"watchDirectory": "useFsEvents"
    },
    "include": ["myapp.ts", "src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
