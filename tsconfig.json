{
    "compilerOptions": {
	"module": "CommonJS",
	"esModuleInterop": true,
	"moduleResolution": "node",
	"noImplicitAny": true,
	"removeComments": true,
	"preserveConstEnums": true,
	"sourceMap": true,
	"outDir": "./dist",
	"declaration": true,
	"allowJs": true,
	"lib": ["dom", "es2019"],
        "target": "es2015"
    },
    "watchOptions": {
	"watchDirectory": "useFsEvents"
    },
    "include": ["index.ts", "src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "./dist/**/*", "./src/lib/input/browser/**/*.ts"]
}
