{
    "compilerOptions": {
	"module": "CommonJS",
	"esModuleInterop": true,
	"moduleResolution": "node",
	"noImplicitAny": true,
	"removeComments": true,
	"preserveConstEnums": true,
	"sourceMap": true,
	"outDir": "dist/",
	"baseUrl": ".",
	"paths": {
	    "*": [ "src/lib/*" ]
	}	
    },
    "watchOptions": {
	"watchDirectory": "useFsEvents"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
