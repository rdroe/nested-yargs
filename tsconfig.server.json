{
    "compilerOptions": {
	"module": "CommonJS",
	"esModuleInterop": true,
	"moduleResolution": "node",
	"noImplicitAny": true,
	"removeComments": true,
	"preserveConstEnums": true,
	"sourceMap": true,
	"outDir": "./dist",
	"declaration": true,
	"allowJs": true,
	"lib": ["dom", "es2019"],
        "target": "es2015",
        "skipLibCheck": true
    },
    "watchOptions": {
	"watchDirectory": "useFsEvents"
    },
    "include": ["./index.ts",  "./src/lib/server/**/*.ts", "./src/lib/dymanic.ts" ],
    "exclude": ["node_modules", "**/*.spec.ts", "./dist/**/*", "./dist-browser/**/*", "./src/lib/input/browser/**/*.ts"]
}

